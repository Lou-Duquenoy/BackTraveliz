{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ customer.firstName }}</td>
            </tr>
           
            <tr>
                <th>Reservation</th>
                <td>{{ customer.reservation }}</td>
            </tr>
            
            <tr>
                <th>Activite</th>
                <td>{{ customer.activite }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ customer.token }}</td>
            </tr>
           
        </tbody>
    </table>
    
    <a href="{{ path('app_customer_index') }}">back to list</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
